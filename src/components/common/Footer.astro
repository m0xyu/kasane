---
import Logo from '../AppLogo.astro';

const currentYear = new Date().getFullYear();

// ツールリンク群
const toolsLinks = [
    { label: 'Text Gradient', url: '/tools/text-gradient-generator' },
    { label: 'Multi Color Palette', url: '/tools/multi-color-palette' },
    { label: 'Wagara Generator', url: '/tools/wagara-generator' },
    { label: 'Tailwind Scheme', url: '/tools/tailwind-palette-generator' },
    { label: 'Shopify Scheme', url: '/tools/shopify-color-generator' },
];

// その他のリンク
const aboutLinks = [
    { label: 'Home', url: '/' },
    { label: 'Colors', url: '/colors' },
    { label: 'About KASANE', url: '/about' },
    { label: 'Terms of Use', url: '/terms' },
    { label: 'Privacy Policy', url: '/privacy' },
];
---

<footer class='border-t border-stone-200 pt-16 pb-8'>
    <div class='max-w-7xl mx-auto px-6'>
        <div class='grid grid-cols-1 md:grid-cols-12 gap-12 mb-16'>
            <div class='md:col-span-4 flex flex-col gap-4'>
                <Logo />
                <p class='text-sm text-stone-500 leading-relaxed mt-2'>
                    The Palette of Zen.<br />
                    Japanese traditional colors and modern web tools for designers
                    & developers.
                </p>

                {/* SNS / GitHub リンク */}
                <div class='flex gap-4 mt-4'>
                    <a
                        href='https://github.com/m0xyu'
                        target='_blank'
                        rel='noopener noreferrer'
                        class='text-stone-400 hover:text-slate-900 transition-colors'
                        aria-label='GitHub'
                    >
                        <svg
                            class='w-5 h-5'
                            fill='currentColor'
                            viewBox='0 0 24 24'
                            aria-hidden='true'
                            ><path
                                fill-rule='evenodd'
                                d='M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z'
                                clip-rule='evenodd'></path></svg
                        >
                    </a>
                </div>
            </div>

            <div
                class='md:col-span-8 grid grid-cols-2 md:grid-cols-3 gap-8 text-sm'
            >
                <div>
                    <h3
                        class='font-bold text-slate-800 mb-4 tracking-widest uppercase text-xs'
                    >
                        Tools
                    </h3>
                    <ul class='space-y-3'>
                        {
                            toolsLinks.map((link) => (
                                <li>
                                    <a
                                        href={link.url}
                                        class='text-stone-500 hover:text-slate-900 transition-colors'
                                    >
                                        {link.label}
                                    </a>
                                </li>
                            ))
                        }
                    </ul>
                </div>

                <div>
                    <h3
                        class='font-bold text-slate-800 mb-4 tracking-widest uppercase text-xs'
                    >
                        SITE LINKS
                    </h3>
                    <ul class='space-y-3'>
                        {
                            aboutLinks.map((link) => (
                                <li>
                                    <a
                                        href={link.url}
                                        class='text-stone-500 hover:text-slate-900 transition-colors'
                                    >
                                        {link.label}
                                    </a>
                                </li>
                            ))
                        }
                    </ul>
                </div>

                <!-- <div>
                    <h3
                        class='font-bold text-slate-800 mb-4 tracking-widest uppercase text-xs'
                    >
                        Developer
                    </h3>
                    <p class='text-stone-500 mb-2'>
                        Designed & Built by <span class='text-slate-800'
                            >xyu</span
                        >.
                    </p>
                    <a
                        href='mailto:hello@example.com'
                        class='text-stone-500 hover:text-slate-900 transition-colors block'
                    >
                        Contact Me
                    </a>
                </div> -->
            </div>
        </div>
        <div
            class='border-t border-stone-200 pt-8 flex flex-col md:flex-row justify-between items-center gap-4 text-xs text-stone-400 tracking-widest'
        >
            <p>&copy; {currentYear} KASANE. All rights reserved.</p>
        </div>
    </div>
</footer>
