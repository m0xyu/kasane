---
import colors from "../data/colors.json";
import type { TraditionalColor } from "../types/color";

const colorList: TraditionalColor[] = colors;
---

<div
  class='fixed inset-0 opacity-[0.03] pointer-events-none z-50'
  style="background-image: url('https://grainy-gradients.vercel.app/noise.svg');"
>
</div>

<main class='max-w-7xl mx-auto px-6 py-12 md:py-20'>
  <header class='mb-16 text-center'>
    <h1 class='text-4xl md:text-6xl font-bold mb-4 tracking-widest'>KASANE</h1>
    <p class='text-sm md:text-base text-slate-500 uppercase tracking-[0.2em]'>
      Japanese Traditional Color Palette
    </p>
  </header>

  <div class='grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6'>
    {
      colorList.map((color) => (
        <div class='group relative bg-white border border-stone-200 rounded-sm shadow-sm hover:shadow-lg transition-all duration-500 overflow-hidden'>
          {/* Color Preview Area */}
          <div
            class='h-40 w-full relative transition-transform duration-700 group-hover:scale-105'
            style={`background-color: ${color.hex};`}
          >
            {/* Overlay on Hover */}
            <div class='absolute inset-0 opacity-0 group-hover:opacity-100 bg-black/10 transition-opacity duration-300 flex items-center justify-center'>
              <span class='bg-white/90 px-3 py-1 text-xs font-mono tracking-wider text-slate-800 shadow-sm'>
                {color.hex}
              </span>
            </div>
          </div>

          {/* Content Area */}
          <div class='p-5'>
            <div class='flex justify-between items-start mb-2'>
              <div>
                <p class='text-xs text-stone-400 uppercase tracking-widest mb-1'>
                  {color.reading}
                </p>
                <h2 class='text-2xl font-bold text-slate-800'>
                  {color.nameJp}
                </h2>
              </div>
              <div class='writing-vertical-rl text-[10px] text-stone-300 tracking-widest h-12 uppercase leading-none opacity-50'>
                {color.nameEn}
              </div>
            </div>

            <p class='text-xs text-stone-500 leading-relaxed line-clamp-3 mt-3 border-t border-stone-100 pt-3'>
              {color.description}
            </p>
          </div>
        </div>
      ))
    }
  </div>
</main>

<style>
  .writing-vertical-rl {
    writing-mode: vertical-rl;
  }
</style>
