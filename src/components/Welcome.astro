---
import { ArrowRightIcon } from 'lucide-react';
import colors from '../data/colors.json';
import type { TraditionalColor } from '../types/color';
import ColorCard from './ColorCard.astro';
import MainHeader from './common/MainHeader.astro';
import ToolsGrid from './ToolsGrid.astro.astro';

const colorList: TraditionalColor[] = colors;
---

<main class='max-w-7xl mx-auto px-6 py-12 md:py-20'>
    <MainHeader
        mainTitle='KASANE - è¥²'
        subTitle='Japanese Traditional Color Palette'
    />

    <ToolsGrid />

    <div class='grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6'>
        {
            colorList.map((color) => (
                <div class='group relative bg-white border border-stone-200 rounded-xl shadow-sm hover:shadow-lg transition-all duration-500 overflow-hidden'>
                    <ColorCard color={color} />
                </div>
            ))
        }
    </div>
</main>

<style>
    .writing-vertical-rl {
        writing-mode: vertical-rl;
    }
</style>
