---
import Layout from '../layouts/Layout.astro';
import MainHeader from '../components/common/MainHeader.astro';
import ColorCard from '../components/ColorCard.astro';
import colors from '../data/colors.json';
import type { TraditionalColor } from '../types/color';
import ToolsGrid from '../components/ToolsGrid.astro.astro';

const colorList: TraditionalColor[] = colors;
---

<Layout
    title='Traditional Colors - KASANE - è¥²'
    description='A collection of Japanese traditional colors. Explore seasonal hues with Hex, RGB, and CMYK values.'
    type='website'
    url='https://kasane-palette.dev/colors'
>
    <div class='flex flex-col min-h-screen'>
        <main class='flex-1 max-w-7xl mx-auto px-6 py-12 md:py-20 w-full'>
            <MainHeader
                mainTitle='Traditional Colors'
                subTitle='The Collection of Japanese Colors'
                isDescription={true}
            />

            {/* Description Text */}
            <div
                class='max-w-2xl mx-auto text-center mb-16 text-stone-500 leading-relaxed'
            >
                <p>
                    An archive of timeless colors inherited from Japan's rich
                    history.<br />
                    Discover the origins and seasonal stories behind each hue, ready
                    to use in modern design with accurate color codes.
                </p>
            </div>

            <div
                class='grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6 mb-16'
            >
                {
                    colorList.map((color) => (
                        <div class='group relative bg-white border border-stone-200 rounded-xl shadow-sm hover:shadow-lg transition-all duration-500 overflow-hidden'>
                            <ColorCard color={color} />
                        </div>
                    ))
                }
            </div>

            <ToolsGrid />
        </main>
    </div>
</Layout>
